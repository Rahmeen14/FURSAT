<% include ../partials/header %>


<div class="container">
    <div class="row">
         <div style="width:30% ; margin: 40px auto;">
          <h3>Edit Site:</h3>  
          </div>
    <div style="width:30% ; margin: 0 auto;">
    
    <form action="/campground/<%= campground._id %>?_method=PUT" method="POST" class="form-horizontal">
    <div class="form-group">
         <label for="name1"  class="col-sm-2 control-label">Name:</label>
           <div class="col-sm-10 ">
             <input type="text" value= " <%= campground.name%>" name="campground[name]">
             </div>
    </div>
    <div class="form-group">
         <label for="image" class="col-sm-2 control-label">Url:</label>
            <div class="col-sm-10 ">
            <input type="text" value=" <%=campground.image%>" name="campground[image]">
            </div>
    </div>
     <div class="form-group">
         <label for="price" class="col-sm-2 control-label">Price:</label>
            <div class="col-sm-10 ">
            <input type="number" value=" <%=campground.price%>"  name="campground[price]" min="0" step="1">
            </div>
    </div>
     <div class="form-group">
         <label for="location" class="col-sm-2 control-label">Location:</label>
            <div class="col-sm-10 ">
            <input type="text" value=" <%=campground.location %>"  name="campground[location]" min="0" step="1">
            </div>
    </div>
      <div class="form-group">
         <label for="info" class="col-sm-2 control-label">Info:</label>
            <div class="col-sm-10 ">
            <input type="text" value=" <%=campground.info%>" name="campground[info]">
            </div>
    </div>
     <div class="form-group ">
           <div class="col-sm-offset-2 col-sm-10">
        <button class="btn  btn-primary "> Submit</button>
        </div>
    </div>
</form>
<a href="/">Go back</a>
</div>
</div>
</div>

<% include ../partials/footer %>