<% include partials/header %>
<h2 style="text-align:center">Add new campground's details!</h2>
<form action="/campgrounds" method="POST">
    <div class="container" >
    <div style="width:30%; margin: 0 auto">
         <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="CampName">
         </div>
         <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url">
         </div>
         <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="site description">
         </div>
         <div class="form-group">
            <input class="form-control btn btn-lg btn-primary" type="submit">
         </div>
    </div></div>
</form>

